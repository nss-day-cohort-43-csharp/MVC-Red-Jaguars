@model TabloidMVC.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-12 col-lg-8">
            <h3 class="mt-3 text-primary text-center card-title">Are you sure you want to delete @Model.Title?</h3>
            <form class="mt-5 card-body" asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            </form>
        </div>
    </div>
    <a asp-action="Index">Back to List</a>
</div>