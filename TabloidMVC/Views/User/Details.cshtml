@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}

<div class="container pt-5">
    <h1>
        @if (!string.IsNullOrWhiteSpace(Model.ImageLocation))
        {

            <img src="@Model.ImageLocation" alt="@Model.DisplayName image" class="profile-image" height="50px" width="50px"/>

        }
        else
        {
            <img src="https://t4.ftcdn.net/jpg/03/46/93/61/360_F_346936114_RaxE6OQogebgAWTalE1myseY1Hbb5qPM.jpg" alt="default profile image" height="50px" width="50px" />
        }
        @Html.DisplayFor(model => model.DisplayName)
    </h1>


    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            User Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.Name)
        </dd>
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
