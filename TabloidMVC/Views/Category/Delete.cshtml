@model TabloidMVC.Models.Category

@{
    ViewData["Title"] = "Delete";
}

@if (Model.Name != null)
{
<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-12 col-lg-8">
            <h3 class="mt-3 text-primary text-center card-title">Are you sure you want to delete @Model.Name?</h3>
            <form class="mt-5 card-body" asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            </form>
        </div>
    </div>
    <a asp-action="Index">Back to List</a>
</div>
}
@if (Model.Name == null)
{
    <div>This category is in use and cannot be deleted at this time.</div>
    <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-area="" asp-controller="Category" asp-action="Index">Return to Category Management</a>
}
